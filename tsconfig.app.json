{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": [
      "ES2023",
      "dom"
    ], // Include DOM types
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // JSX support for React
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
