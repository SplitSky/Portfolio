{
  "compilerOptions": {
    "composite": true, // Enable project references
    "module": "CommonJS", // Node.js uses CommonJS modules
    "target": "ES2020",
    "outDir": "./dist-node", // Output directory for Node.js-specific files
    "declaration": true, // Emit declaration files for Node.js
    "emitDeclarationOnly": false, // Emit both declarations and compiled files
    "skipLibCheck": true
  },
  "include": [
    "src/node/**/*.ts",
    "src/node/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json" // References the app-specific config
    }
  ]
}
